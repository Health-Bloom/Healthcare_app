<link rel="stylesheet" href="/css/user.css">

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container-fluid">
    <a class="navbar-brand text-info" href="/">Med-Tech</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link" href="/Contributes">Medicines</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/HealthCheckup">Health Checkup</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/Pollution">Pollution</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/earthquakes">Earthquakes</a>
        </li>
      </ul>
      <ul class="navbar-nav logged_state ">
        <% if(!currentUser) {%>
          <a class="nav-link" 
          type="button" 
          class="btn btn-primary" 
          data-bs-toggle="modal" 
          data-bs-target="#staticBackdrop">Login</a>
          <a class="nav-link text-primary" href="/register">Register</a>
          <% } else {%>
          <a class="nav-link text-warning font-weight-bold" href="/user/<%= currentUser.id %>"><%= currentUser.username %></a>
          <a class="nav-link" href="/logout">Logout</a>
          <% } %>
      </ul>
    </div>
  </div>
</nav>

<!--LOGIN-->

<%- include('../usersAuth/login')%>

