<%- include('base/header')%>

<%- include('base/navbar')%>
<html>
    <link rel="stylesheet" href="/css/pollution.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"/>

<h1 class="head heading">Get the Pollution details of different areas</h1>
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="border border-dark rounded p-3 shadow ">
                <div class="row">
                    <h3 class="head text-center py-1">Enter the Coordinates of the location</h1>
                    <div>
                        <input id="latitude" value="" class="bg-transparent border border-primary user form-control" placeholder="Enter the Latitude"></input><br>
                    </div>
                    <div>
                        <input id="longitude" value="" class="bg-transparent border border-primary user form-control" placeholder="Enter the Longitude"></input><br>
                    </div>
                </div>
                 <p><a class="btn btn-warning mt-2 submit text-center col-12 col-md-12" onclick="Location()">Search for coordinates you entered</a></p>
                 <h3 class="head text-center py-1">OR</h3>
                  <p><a class="btn btn-warning mt-2 submit col-12 col-md-12" onclick="getLocation()">Search for your current location <i class="fas fa-map-marker-alt"></i></a></p>
                    <div class="text px-4 text-center">
                        <h4 class="text-center py-2">Pollution Statistics</h4>
                        <div class="btn "><span class="lead font-weight-bold"><b>Air Quality Level</b></span><span class="input0 text-light lead"></span></div>
                        <div class="btn "><span class="lead font-weight-bold"><b>CO<sub>2</sub> level</b></span><span class="input1 text-light lead"></span></div>
                        <div class="btn "><span class="lead font-weight-bold"><b>NO<sub>2</sub> level</b></span><span class="input2 text-light lead"></span></div>
                        <div class="btn"><span class="lead font-weight-bold"><b>O<sub>3</sub> level</b></span><span class="input3 text-light lead"></span></div>
                        <div class="btn"><span class="lead font-weight-bold"><b>SO<sub>2</sub> level</b></span><span class="input6 text-light lead"></span></div>
                    </div>
                </div>
           </div>
       
        <div class="col-md-6 py-2">
          <img src="https://cdn.dribbble.com/users/689436/screenshots/7287921/media/e2a639942f7b869ca340cb7e08abb0ec.jpg" class="img-fluid">
        </div>
    </div>
    </div>


<div class="map">
    <h1 class="head"><i class="fas fa-search-location"></i> Location on Map</h1>
    <div class="border border-dark shadow bg-dark img-fluid" id='map'></div>
</div>

<%- include('base/footer')%>

<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
</script>

<script src="/javascripts/pollutionRender.js"></script> 
