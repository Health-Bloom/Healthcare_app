<%- include('../base/header')%>

<%- include('../base/navbar')%>

<div class="display">
	<h2 class="username text-center fw-bold">
		Hey there, <%= user.username %>!
	</h2>
<div class="mt-4 container border-dark shadow p-3">
<div class="row">
	<div class="col text-center">
		<div class="profile">
			<img src="<%= images[0].url%>" class="border rounded-circle img-thumbnail" style="border-radius: 20px; width:90%;" alt="">
		</div>
		<div class="m-2">
		<!-- <a href="#"><button class="btn btn-info">Edit Profile</button></a> -->
		<!-- <a href="#"><button class="btn btn-outline-danger">Delete Account</button></a> -->
		</div>
	</div>
        <!-- <div class="border border-primary shadow" id='map' ></div> -->

	<div class="col">
	<div class="col-md-6 p-2">
		<h3>Name : <%= user.username %></h3>
		<h4 class="caption">Email : <a class="btn btn-sm btn-outline-success" href="mailto:<%= user.email %>" target="_blank"><%= user.email %></a></h4>		
	</div>
	<br>
	<div class="col-md-12">
		
		<div class="border rounded text-center p-2 bg-light">
			<h3>Contribution details</h3>
			<table class="table table-hover" >
				<thead>
				  <tr>
					<th scope="col">Medicine</th>
					<th scope="col">Amount left</th>
				  </tr>
				  </thead>
				  <tbody>
					<% for(let Contribute of Contributes) {%>
						<% if(!Contribute) {%>
							<tr>
								<td>
									<p>Not added</p>
								</td>
								<td>Not added
								</td>
							</tr>
							<% } else {%>
							<tr>
								<td>
									<p><%= Contribute.medname %></p>
								</td>
								<td><%= Contribute.medAmount %>
								</td>
							</tr>
							<% } %>
					<% }; %>
				  </tbody>
			</table>
		</div>
	</div>
	</div>
</div>
</div>
<%- include('../base/footer')%>
</div>

<style>
	.display{
		background-color: rgb(8, 102, 91);
		height:25%;
		width: 100%;
		position:absolute;
	}
	.display .username{
		color: white;
		font-family: 'Times New Roman', Times, serif;
		/* margin-left: 8%; */
		margin-top: 3%;
	}
	.container{
		background-color: rgb(192, 228, 224);
		position:relative;
		/* margin-top: 20%; */
		border-radius: 10px;
	}
</style>
