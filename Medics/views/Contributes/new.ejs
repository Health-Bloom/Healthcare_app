<%- include('../base/header')%>

<%- include('../base/navbar')%>
<html>
<div class="container main_product">
    <h1 class="text-center py-4">Contribute</h1>
    <div class="col-10 offset-1">
        <form class="needs-validation" action="/Contributes" method="POST" novalidate>
            <div class="mb-3">
                <label class="form-label font-weight-bold" for="name">Name</label>
                <input class="form-control" type="text" id="name" name="name" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
       
            <div class="mb-3">
                <label for="emailEntry" class="form-label">Email address</label>
                <input type="email" class="form-control" id="emailEntry"name="emailEntry" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
              
            <div class="mb-3">
                <label class="form-label font-weight-bold" for="medname">Medicine name</label>
                <input class="form-control" type="text" id="medname" name="medname" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label font-weight-bold" for="medAmount">Number of tablets</label>
                <input class="form-control" type="text" id="medAmount" name="medAmount" placeholder="0" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <button class="btn btn-success col-12 col-md-12 my-4 mb-5">Add Medicine</button>
            </div>
        </form>
    </div>
</div>

<script src='/javascripts/validateForms.js'></script>

    <%- include('../base/footer')%>
    </html>