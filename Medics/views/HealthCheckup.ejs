
<%- include('base/header')%>

<%- include('base/navbar')%>
<html>
  <link rel="stylesheet" href="/css/checkup.css">
<body>
<div class="container">
    <h1 class=" text-center head">Check up your health</h1>

       <div class="d-flex ">
  <div class="display_left p-3">
       <h3 class="head text-center py-3">Enter the Details</h1>
        
        <div>
            <input value="" class="bg-light border border-primary user form-control" placeholder="Enter name"></input><br>
        </div>
        <div class="row">
        <div class="col">
            <input  value=""  id="input2" class="bg-light border border-primary user form-control" type="number"placeholder="Enter age"></input><br>
        </div>
        <div class="col">
          <select  value=""  id="input3" class="bg-light  border border-primary user form-control" placeholder="Enter gender">
            <option>male</option>
            <option>female</option>
          </select>
          <br>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <input  value=""  id="input4" class="bg-light  border border-primary user form-control" placeholder="Enter height"></input><br>
        </div>
        <div class="col">
          <input  value=""  id="input5" class="bg-light border border-primary user form-control" placeholder="Enter weight"></input><br>
        </div>
        <div class="col">
          <input  value=""  id="input6" class="bg-light  border border-primary user form-control" placeholder="Enter Activity level"></input><br>
        </div>
      </div>

        <div class="row text-center">
          <div class="col m-1">
            <button class="btn btn-primary m-2" type="submit" class="submit" onclick="handleSubmit1()">Balanced diet</button>
          </div>
          <div class="col m-1">
             <button class="btn btn-primary m-2" type="submit" class="submit" onclick="handleSubmit2()">High-Protien diet</button>
           </div>
           <div class="col m-1">
             <button class="btn btn-primary m-2" type="submit" class="submit" onclick="handleSubmit3()">Low-Fat diet</button>
            </div>
        </div>
      </form>
  </div>  

     <div class="display_right">
      <div class="cal text-center"></div>

      <div class="first border border-primary p-2" id="box1" >
        <h3 class="text-center">For balanced diet</h3>
        <p>Protein Intake:<span class="bprotein"></span></p>
        <p>Fat Intake:<span class="bfat"></span></p>
        <p>Carbs Intake:<span class="bcarbs"></span></p>
      </div>

      <div class="border second border-primary p-2" id="box2">
        <h3 class="text-center">For High-Protien diet</h3>
        <p>Protein Intake:<span class="hprotein"></span></p>
        <p>Fat Intake:<span class="hfat"></span></p>
        <p>Carbs Intake:<span class="hcarbs"></span></p>
      </div>

      <div class="first border border-primary p-2" id="box3">
        <h3 class="text-center">For Low-Fat diet</h3>
        <p>Protein Intake:<span class="lfprotein"></span></p>
        <p>Fat Intake:<span class="lffat"></span></p>
        <p>Carbs Intake:<span class="lfcarbs"></span></p>
      </div>
</div>
</div>



